<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aviwe.pelebox.Scanout.ScanOoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="4dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="60dp">

                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="40dp">

                        <RadioButton
                            android:id="@+id/radio_id"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:onClick="checkButton"
                            android:text="ID Number"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            tools:ignore="OnClick" />

                        <RadioButton
                            android:id="@+id/radio_pin"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="13dp"
                            android:onClick="checkButton"
                            android:text="Pin"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </RadioGroup>

                    <EditText
                        android:id="@+id/input1"
                        android:layout_width="480dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="11dp"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textAllCaps="true"
                        android:textSize="20dp"
                        android:imeOptions="actionSend"
                        android:textStyle="bold" />
                    <!--android:background="@drawable/customedittext2"-->


                    <EditText
                        android:id="@+id/input2"
                        android:layout_width="480dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="10dp"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textAllCaps="true"
                        android:textSize="20dp"
                        android:imeOptions="actionSend"
                        android:textStyle="bold" />
                    <!--android:background="@drawable/customedittext2"-->


                    <Button
                        android:id="@+id/search"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_round_shape"
                        android:padding="5dp"
                        android:text="Search"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="80dp">

                    <TextView
                        android:layout_width="580dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/customedittext2"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Personal Information"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editText"
                                android:layout_width="290dp"
                                android:layout_height="40dp"
                                android:background="@drawable/customedittext"
                                android:editable="false"
                                android:gravity="center"
                                android:text="Name of Patient"
                                android:textColor="#ffffff" />

                            <EditText
                                android:id="@+id/name"
                                android:layout_width="290dp"
                                android:layout_height="40dp"
                                android:background="@drawable/customedittext2"
                                android:editable="false"
                                android:gravity="center"
                                android:textColor="#000000" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ediSurname"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext"
                            android:editable="false"
                            android:gravity="center"
                            android:text="Surname of Patient"
                            android:textColor="#ffffff" />

                        <EditText
                            android:id="@+id/surnname"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext2"
                            android:editable="false"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ediID"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext"
                            android:editable="false"
                            android:gravity="center"
                            android:text="South African ID"
                            android:textColor="#ffffff" />

                        <EditText
                            android:id="@+id/idNumber"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext2"
                            android:editable="false"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ediCellphone"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext"
                            android:editable="false"
                            android:gravity="center"
                            android:text="Cellphone Number"
                            android:textColor="#ffffff" />

                        <EditText
                            android:id="@+id/cellphone"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext2"
                            android:editable="false"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="580dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="11dp"
                        android:background="@drawable/customedittext2"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="MEDICATION INFORMATION"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editNHI"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext"
                            android:editable="false"
                            android:gravity="center"
                            android:text="Scanned Barcode"
                            android:textColor="#ffffff" />

                        <EditText
                            android:id="@+id/nhi"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext2"
                            android:editable="false"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ediCapturedDate"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext"
                            android:editable="false"
                            android:gravity="center"
                            android:text="Parcel Scanned In Date"
                            android:textColor="#ffffff" />

                        <EditText
                            android:id="@+id/capaturedDate"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext2"
                            android:editable="false"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editduedate"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext"
                            android:editable="false"
                            android:gravity="center"
                            android:text="Parcel Due Date"
                            android:textColor="#ffffff" />


                        <EditText
                            android:id="@+id/duedate"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext2"
                            android:editable="false"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editStatus"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext"
                            android:editable="false"
                            android:gravity="center"
                            android:text="Parcel Status"
                            android:textColor="#ffffff" />

                        <EditText
                            android:id="@+id/status"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext2"
                            android:editable="false"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/collect"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_round_shape"
                        android:padding="5dp"
                        android:text="Scan Out"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>




            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>
