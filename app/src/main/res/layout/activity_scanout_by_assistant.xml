<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aviwe.pelebox.ScanoutByAssistantActivity">

    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingLeft="3dp">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="175dp"
                android:layout_height="20dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/customedittext2"
                android:gravity="center"
                android:padding="5dp"
                android:text="Personal Information"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext"
                        android:editable="false"
                        android:gravity="center"
                        android:text="Name of Patient"
                        android:textColor="#ffffff" />


                    <EditText
                        android:id="@+id/name"
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext2"
                        android:editable="false"
                        android:gravity="center"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ediSurname"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext"
                    android:editable="false"
                    android:gravity="center"
                    android:text="Surname of Patient"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/surnname"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext2"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ediID"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="South African ID"

                    android:textColor="#ffffff" />

                <EditText
                    android:id="@+id/idNumber"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext2"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ediCellphone"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Cellphone Number"
                    android:textColor="#ffffff" />

                <EditText
                    android:id="@+id/cellphone"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext2"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/customedittext2"
                android:gravity="center"
                android:padding="5dp"
                android:text="MEDICATION INFORMATION"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editNHI"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Scanned Barcode"
                    android:textColor="#ffffff" />

                <EditText
                    android:id="@+id/nhi"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext2"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ediCapturedDate"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Parcel Scanned In Date"
                    android:textColor="#ffffff" />

                <EditText
                    android:id="@+id/capaturedDate"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext2"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editduedate"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Parcel Due Date"
                    android:textColor="#ffffff" />


                <EditText
                    android:id="@+id/duedate"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext2"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editStatus"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext"
                    android:editable="false"
                    android:gravity="center"
                    android:text="Parcel Status"
                    android:textSize="15dp"
                    android:textColor="#ffffff" />

                <EditText
                    android:id="@+id/status"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/customedittext2"
                    android:editable="false"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <Button
                android:id="@+id/collect"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_round_shape"
                android:text="COLLECT"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>
</LinearLayout>

</ScrollView>
