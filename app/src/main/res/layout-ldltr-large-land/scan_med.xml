<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingLeft="30dp" >
        <TextView
            android:id="@+id/txtsurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="surname"
            android:textStyle="bold"
            android:textColor="#455A64"
            android:typeface="sans"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtsurname"
            android:layout_marginTop="1dp"
            android:text="name"
            android:textColor="#455A64"
            android:textSize="15dp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtname"
            android:textColor="#455A64"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:text="id number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtID"
            android:id="@+id/txtDueDate"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:textColor="#455A64"
            android:textSize="15dp"
            android:text="due date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDueDate"
            android:id="@+id/cellphone"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:textColor="#455A64"
            android:textSize="15dp"
            android:text="cellphone"/>

        <TextView
            android:id="@+id/txtNhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cellphone"
            android:layout_alignParentStart="true"
            android:text="NHI "
            android:textColor="#455A64"
            android:textSize="15dp"
            android:textStyle="bold" />

        <!-- Rightend Duration -->
        <TextView
            android:id="@+id/txtAccept"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/txtID"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_black_24dp"
            android:gravity="right"
            android:textColor="#10bcc9"
            android:textSize="15dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEdit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/txtID"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="74dp"
            android:background="@drawable/ic_edit_black_24dp"
            android:gravity="right"
            android:textColor="#10bcc9"
            android:textSize="15dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDecline"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/txtname"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/txtEdit"
            android:background="@drawable/ic_close_black_24dp"
            android:gravity="right"
            android:onClick="acceptMedPackClient"
            android:textColor="#10bcc9"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
