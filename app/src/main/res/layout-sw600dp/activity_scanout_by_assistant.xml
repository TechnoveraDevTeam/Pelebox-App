<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aviwe.pelebox.ScanoutByAssistantActivity">

    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingLeft="350dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
    >

                <TextView
                    android:layout_width="580dp"
                    android:layout_height="40dp"
                    android:text="Personal Information"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginLeft="11dp"
                    android:textColor="#000000"
                    android:background="@drawable/customedittext2"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/editText"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext"
                            android:gravity="center"
                            android:text="Name of Patient"
                            android:editable="false"
                            android:textColor="#ffffff" />


                        <EditText
                            android:id="@+id/name"
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:background="@drawable/customedittext2"
                            android:gravity="center"
                            android:editable="false"
                            android:textColor="#000000" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/ediSurname"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext"
                        android:gravity="center"
                        android:text="Surname of Patient"
                        android:editable="false"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/surnname"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext2"
                        android:gravity="center"
                        android:editable="false"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/ediID"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext"
                        android:gravity="center"
                        android:text="South African ID"
                        android:editable="false"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/idNumber"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext2"
                        android:gravity="center"
                        android:editable="false"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/ediCellphone"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext"
                        android:gravity="center"
                        android:text="Cellphone Number"
                        android:editable="false"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/cellphone"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext2"
                        android:gravity="center"
                        android:editable="false"
                        android:textColor="#000000" />
                </LinearLayout>
                <TextView
                    android:layout_width="580dp"
                    android:layout_height="40dp"
                    android:text="MEDICATION INFORMATION"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginLeft="11dp"
                    android:textColor="#000000"
                    android:background="@drawable/customedittext2"
                    android:textSize="20dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/editNHI"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext"
                        android:gravity="center"
                        android:text="Scanned Barcode"
                        android:editable="false"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/nhi"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext2"
                        android:gravity="center"
                        android:editable="false"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/ediCapturedDate"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext"
                        android:gravity="center"
                        android:text="Parcel Scanned In Date"
                        android:editable="false"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/capaturedDate"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext2"
                        android:gravity="center"
                        android:editable="false"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/editduedate"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext"
                        android:gravity="center"
                        android:text="Parcel Due Date"
                        android:editable="false"
                        android:textColor="#ffffff" />


                    <EditText
                        android:id="@+id/duedate"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext2"
                        android:gravity="center"
                        android:editable="false"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/editStatus"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext"
                        android:gravity="center"
                        android:text="Parcel Status"
                        android:editable="false"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/status"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:background="@drawable/customedittext2"
                        android:gravity="center"
                        android:editable="false"
                        android:textColor="#000000" />
                </LinearLayout>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="COLLECT"
            android:textColor="#ffffff"
            android:background="@drawable/button_round_shape"
            android:id="@+id/collect"
            android:textStyle="bold"
            android:textSize="20dp"
          android:layout_marginLeft="220dp"
            android:layout_marginBottom="20dp"
           />


            </LinearLayout>
</LinearLayout>

</ScrollView>
